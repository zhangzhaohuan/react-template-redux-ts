{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "esNext",
        "moduleResolution": "Node",
        "rootDir": "src",
        "sourceMap": true,
        "target": "es2015",
        "allowSyntheticDefaultImports":true,
        "esModuleInterop":true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "webpack",
        "jest",
        "**/*.spec.ts"
    ]
}